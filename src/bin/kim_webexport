# Added localisation and dbus support in 2013 by Daniel Tartavel <contact@librepc.com>

export TEXTDOMAIN="kim"
export TEXTDOMAINDIR="/usr/share/locale"
. gettext.sh

FILE="";
SCELTA="$1";
DIR="$2";
let "nbfiles = $# -1"
title="`gettext "Kim Web export"`"
kdialog --title "$title" --yesnocancel "`gettext "Do you want to replace existing files ?"`"
ret=$?
if [ $ret = 2 ];then
	exit 1
fi;
init=`gettext "Initializing"`
# Replace existing files !
dbusRef=`kdialog --title "$title" --progressbar "$init" "$nbfiles"`
qdbus $dbusRef showCancelButton true
compteur=0
for i in "$@";do
	if [ -f "$i" ];then
		#test if cancel button has been pushed
		if test "true" = `qdbus $dbusRef wasCancelled`;then
			qdbus $dbusRef close
			exit 1
		fi
		let "compteur +=1"
		FILE="$i"
		label="`gettext "Compressing file :"` file `basename "$FILE"`"
		qdbus $dbusRef setLabelText "$label"
		case $ret in
			0)
				mogrify -resize "$SCELTA" -quality 75 "$FILE";;
			1)
				convert -resize "$SCELTA" -quality 75 "$FILE" "$DIR/web_`basename "$FILE"`";;
		esac;
		qdbus $dbusRef value "$compteur"
	fi;
done
qdbus $dbusRef close