# Added localisation and dbus support in 2013 by Daniel Tartavel <contact@librepc.com>

export TEXTDOMAIN="kim"
export TEXTDOMAINDIR="/usr/share/locale"
. gettext.sh

test -n "$KDEHOME" || KDEHOME="`qtpaths --paths GenericDataLocation`"; export KDEHOME
TMPDIR=`mktemp -d "$KDEHOME"tmp-"$HOSTNAME"/kim.XXXXXXXX` || exit 1

ATTACHMENTS="";
title=`gettext "Kim - Resize and send"`
param1=`gettext "Send by mail:"`
param2=`gettext "Full size"`
param3=`gettext "1600 px width"`
param4=`gettext "1280 px width"`
param5=`gettext "1024 px width"`
choice=`kdialog --title "$title" --radiolist "$param1" 1 "$param2"  off 2 "$param3"  on 3 "$param4" off 4 "$param5"  off`;

let "nbfiles = $#"
init=`gettext "Initialising"`
dbusRef=`kdialog --title "$title" --progressbar "$init" $nbfiles`
qdbus $dbusRef showCancelButton true 

compteur=0

for i in "$@";do
	if [ -f "$i" ];then
		#test if cancel button has been pushed
		if test "true" = `qdbus $dbusRef wasCancelled`;then
			qdbus $dbusRef close
			exit 1
		fi
		ATTACHMENTS="$i"
		let "compteur +=1"
		qdbus $dbusRef setLabelText "`gettext "Resizing and compressing file:"` `basename "$ATTACHMENTS"`"
		case "$choice" in 
			1) cp $i $TMPDIR;;
			2) convert -resize 1600x1600 "$ATTACHMENTS" "$TMPDIR"/`basename "$ATTACHMENTS"`;;
			3) convert -resize 1280x1280 "$ATTACHMENTS" "$TMPDIR"/`basename "$ATTACHMENTS"`;;
			4) convert -resize 1024x1024 "$ATTACHMENTS" "$TMPDIR"/`basename "$ATTACHMENTS"`;;
			*)exit 1;;
		esac
		qdbus $dbusRef value $compteur
	fi;
done
#thunderbird -compose "attachment='$TMPDIR/*'"
kmail --attach $TMPDIR/* & job_pid=$!
wait $job_pid
#rm -rf "$TMPDIR"

qdbus $dbusRef close
#kdialog --title "$title" --msgbox "`gettext "Send by mail: you can write your message!"`"
