# Added localisation and dbus support in 2013 by Daniel Tartavel <contact@librepc.com>

export TEXTDOMAIN="kim"
export TEXTDOMAINDIR="/usr/share/locale"
. gettext.sh

FILE=""
ext=""
QUALITY="$1"
DIR="$2"
let "nbfiles = ($# -1)/2"
title="`gettext "Kim - Compression"`"
init=`gettext "Initializing"`
replace=`gettext "Do you want to replace existing files ?"`
kdialog --title "$title" --yesnocancel "$replace"
ret=$?
#0)	# Replace existing files !
dbusRef=`kdialog --title "$title" --progressbar "$init" $nbfiles`
qdbus $dbusRef showCancelButton true
compteur=0
for i in "$@";do
	if [ -f "$i" ];then
		#test if cancel button has been pushed
		if test "true" = `qdbus $dbusRef wasCancelled`;then
			qdbus $dbusRef close
			exit 1
		fi
		let "compteur +=1"
		FILE="$i"
		qdbus $dbusRef setLabelText "`gettext "Compressing file :"` `basename "$FILE"`"
		case $ret in
		    0)
				mogrify -quality $QUALITY "$FILE";;
		    1)
				convert -quality $QUALITY "$FILE" "$DIR/`gettext "compressed"`$ext_`basename "$FILE"`";;
		    2)	
				qdbus $dbusRef close
				exit 1;;
		esac;

		qdbus $dbusRef value "$compteur"
	fi;
done
qdbus $dbusRef close