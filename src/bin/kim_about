export TEXTDOMAIN="kim"
export TEXTDOMAINDIR="/usr/share/locale"
. gettext.sh

ACTION="$1";
kdeinstdir=`kde4-config --prefix`
about=`gettext "about"`
case $ACTION in 
	about) kdialog --title "$about" --msgbox "`gettext "Kim (Kde Image Menu) 0.9.7\n\nOriginal Authors : 	Charles Bouveyron <charles.bouveyron@free.fr>\n		Raphaël Pinson <raphink@raphink.net>\nActual Maintainer	Daniel Tartavel <contact@librepc.com>"`" 600 400;;
esac

