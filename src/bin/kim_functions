function error ()
{
	if [ $1 -ne 0 ];then
		kdialog --title "$title" --msgbox "$2 :\n$3"
	fi
}

function file_exist ()
{
	if [ -e $1 ]; then 
		text=`gettext "Destination file exist<br />Enter new name else file will be replaced"`
		savefile=`kdialog --title "$title" --inputbox "$text" "$1" `
		if [ $? -eq 1 ]; then 
			qdbus $dbusRef close
			exit 1
		fi
	fi
}