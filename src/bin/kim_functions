function error ()
{
	if [ $1 -ne 0 ];then
		kdialog --title "$title" --msgbox "$2 :\n$3"
	fi
}

function file_exist () {
    local path="$1"
    if [ -e "$path" ]; then
        local text
        text=$(gettext "Destination file exist<br />Enter new name else file will be replaced")
        savefile=$(kdialog --title "$title" --inputbox "$text" "$path")
        ...
    fi
}
