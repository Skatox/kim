# Added localisation and dbus support in 2013 by Daniel Tartavel <contact@librepc.com>

export TEXTDOMAIN="kim"
export TEXTDOMAINDIR="/usr/share/locale"
. gettext.sh

FILE="";
let "nbfiles = ($# -1)"
DIR="$1";
title="`gettext "Kim - rename"`"
param=`gettext "Do you want to replace existing files ?"`
init=`gettext "Initialising"`
choose=`gettext "Choose the new name of images:"`
wallpaper=`gettext "wallpaper_"`
kdialog --title "$title" --yesnocancel "$param"
ret=$?
if [ $ret -eq 2 ];then
	kdialog --title "$dtitle" --passivepopup "Operation cancelled" 5
	exit 1
fi;
# Replace existing files !
newname=`kdialog --title "$title" --inputbox "$choose" "$wallpaper"`
if [ $? -ne 0 ]; then
	kdialog --title "$dtitle" --passivepopup "Operation cancelled" 5
    exit 1
fi
dbusRef=`kdialog --title "$title" --progressbar "$init" $nbfiles`
qdbus $dbusRef showCancelButton true
compteur=0
for i in "$@";do
	if [ -f "$i" ];then
		#test if cancel button has been pushed
		if test "true" = `qdbus $dbusRef wasCancelled`;then
			qdbus $dbusRef close
			exit 1
		fi
		let "compteur +=1"
		FILE="$i";
		extension=${FILE#*.}
		suff="";
		if [ "$compteur" -lt "10" ];
		then suff="00";
		else if [ "$compteur" -lt "100" ];
			  then suff="0";
			  fi
		fi
		qdbus $dbusRef setLabelText "`gettext "Renaming file:"` `basename "$FILE"`"
		case $ret in
		0)
		  	mv "$FILE" "$DIR/$newname$suff$compteur.$extension";;
		1)
			cp "$FILE" "$DIR/$newname$suff$compteur.$extension";;
		2)
			exit 1;;
		esac;
		qdbus $dbusRef value "$compteur"
	fi;
done
qdbus $dbusRef close